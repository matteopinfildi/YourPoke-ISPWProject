<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane stylesheets="@../style.css" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ispwproject.control.graphic.buyPokeLab.BuyPokeLabController"
            prefHeight="400.0" prefWidth="600.0">
    <fx:include source="sidebar.fxml"/>

    <VBox fx:id="mainContent" spacing="10" alignment="TOP_CENTER" prefWidth="700" layoutX="210" layoutY="20">
        <Label text="Buy Pokè Lab" style="-fx-font-size: 36px; -fx-text-fill: black; -fx-font-weight: bold;" styleClass="title"/>
        <Label text="Compose your pokè" style="-fx-font-size: 18px; -fx-text-fill: black;" styleClass="subtitle"/>
    </VBox>

<!--    Sistemare altezze, si sovrappongono!!!-->
    <HBox layoutX="200" layoutY="200" spacing="20">
        <VBox id="selectRice" prefHeight="100"  prefWidth="160" spacing="10">
            <VBox>
                <ImageView fx:id="riceImage" fitWidth="150" preserveRatio="true"/>
            </VBox>
            <Button onAction="#handleRice" text="Select Rice"/>
        </VBox>

        <VBox id="selectProtein" prefHeight="100"  prefWidth="160" spacing="10">
            <VBox>
                <ImageView fx:id="proteinImage" fitWidth="150" preserveRatio="true"/>
            </VBox>
            <Button onAction="#handleProtein" text="Select Protein"/>
        </VBox>

        <VBox id="selectFruit" prefHeight="100"  prefWidth="160" spacing="10">
            <VBox>
                <ImageView fx:id="fruitImage" fitWidth="150" preserveRatio="true"/>
            </VBox>
            <Button onAction="#handleFruit" text="Select Fruit"/>
        </VBox>
    </HBox>

    <HBox layoutX="200" layoutY="400" spacing="20">
        <VBox id="selectCrunchy" prefHeight="100" prefWidth="160" spacing="10">
            <VBox>
                <ImageView fx:id="crunchyImage" fitWidth="150" preserveRatio="true"/>
            </VBox>
            <Button onAction="#handleCrunchy" text="Select Crunchy"/>
        </VBox>

        <VBox id="selectSauces" prefHeight="100" prefWidth="160" spacing="10">
            <VBox>
                <ImageView fx:id="saucesImage" fitWidth="150" preserveRatio="true"/>
            </VBox>
            <Button onAction="#handleSauces" text="Select Sauces"/>
        </VBox>

        <VBox id="selectExtra" prefHeight="100" prefWidth="160" spacing="10">
            <VBox>
                <ImageView fx:id="extraImage" fitWidth="150" preserveRatio="true"/>
            </VBox>
            <Button onAction="#handleExtra" text="Select Extra"/>
        </VBox>
    </HBox>


</AnchorPane>
