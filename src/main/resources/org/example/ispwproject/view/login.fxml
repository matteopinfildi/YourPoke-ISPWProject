<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ispwproject.control.graphic.LoginController">
    <AnchorPane prefHeight="260.0" prefWidth="300.0">
        <children>
            <TextField fx:id="usernameField" layoutX="19.0" layoutY="71.0" prefHeight="25.0" prefWidth="262.0" promptText="Username" />
            <PasswordField fx:id="passwordField" layoutX="19.0" layoutY="118.0" prefHeight="25.0" prefWidth="262.0" promptText="Password" />
            <Button layoutX="19.0" layoutY="166.0" onAction="#handleLogin" prefHeight="25.0" prefWidth="262.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" text="Sign In" />
            <Button layoutX="19.0" layoutY="234.0" onAction="#handleBackToHome" prefHeight="25.0" prefWidth="262.0" text="Back Home" />
            <Label alignment="CENTER" prefHeight="63.0" prefWidth="300.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Sign In" />
            <Label layoutX="55.0" layoutY="207.0" text="Don't have an account yet? Register" underline="true" />
        </children>
    </AnchorPane>
    <Label fx:id="errorLabel" prefHeight="17.0" prefWidth="400.0" textFill="red" />
</VBox>

